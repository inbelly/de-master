<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

			<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
				<property name="host" value="${site.mail.smtpHost}"/>
			</bean>
			<bean id="mailService" class="ml.walrus.service.MailService" autowire="byType"/>
			<bean id="emailConfig" class="com.megalogika.sv.service.EmailConfig">
				<property name="fromEmail" value="team@inbelly.co.uk" />
				<property name="fromName" value="InBelly (http://inbelly.co.uk)" />
				<property name="problemsEmail" value="info@inbelly.co.uk" />
				<property name="siteUrlBase" value="http://inbelly.co.uk/spring" />
			</bean>
</beans>